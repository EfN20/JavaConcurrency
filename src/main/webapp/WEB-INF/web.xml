<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>FilesDisplay</servlet-name>
        <jsp-file>/task1-web/filesDisplay.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilesDisplay</servlet-name>
        <url-pattern>/display</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchPage</servlet-name>
        <jsp-file>/task2-web/search.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchPage</servlet-name>
        <url-pattern>/searchPage</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResultPage</servlet-name>
        <jsp-file>/task2-web/resultSearch.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResultPage</servlet-name>
        <url-pattern>/result</url-pattern>
    </servlet-mapping>

</web-app>